# Normalizar terminaciones de línea automáticamente
* text=auto

# Archivos específicos - forzar LF (Unix)
*.py text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.lock text eol=lf

# Archivos binarios - no procesar
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.onnx binary
*.pkl binary
*.h5 binary
*.pb binary

# Archivos de sistema
.DS_Store binary
Thumbs.db binary
*.swp binary
*.swo binary
*~ binary
